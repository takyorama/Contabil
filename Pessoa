/*****  Controle gestor dos dados  *****/
#include <string.h>

class Pessoa : public Controller{
  public:
    /**********  GETTERS & SETTERS  **********/
    bool setName(std::string);
    bool setAddress(std::string);
    bool setDistrict(std::string);
    bool setCity(std::string);
    bool setComplement(std::string);
    bool setNumber(int);
    bool setNationalRegister(char *);
    bool setRG(char *);
    bool setBirday(char *);
    
    string getName();
    string getAddress();
    string getDistrict();
    string getCity();
    string getComplement();
    int getNumber();
    char getNationalRegister();
    char getRG();
    char getBirday();
  private:
    std::string nome, endereco, bairro, cidade, complemento;
    char cpf[10], rg[11], nascimento;
    int numero;
};
